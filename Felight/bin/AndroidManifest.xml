<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.felight.felight"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" >
    </uses-feature>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.felight.felight.CalculatorActivity" >
        </activity>
        <activity android:name="com.felight.felight.BenchMarkActivity" >
        </activity>
        <activity
            android:name="com.felight.felight.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.felight.felight.RandomJokes"
            android:label="@string/title_activity_random_jokes" >
        </activity>
    </application>

</manifest>